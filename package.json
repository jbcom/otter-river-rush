{
  "name": "otter-river-rush-monorepo",
  "version": "1.2.9",
  "private": true,
  "type": "module",
  "description": "Otter River Rush - A React Three Fiber endless runner game",
  "author": "jbcom",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jbcom/otter-river-rush.git"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "pnpm --filter client dev",
    "build": "pnpm --filter client build",
    "preview": "pnpm --filter client preview",
    "test": "pnpm --filter client test",
    "test:e2e": "pnpm --filter client test:e2e",
    "lint": "pnpm --filter client lint",
    "type-check": "pnpm --filter client type-check",
    "generate:models": "pnpm --filter dev-tools tsx src/generators/meshy-models.ts",
    "generate:animations": "pnpm --filter dev-tools tsx src/generators/otter-animations.ts",
    "generate:textures": "pnpm --filter dev-tools generate:textures",
    "generate:sprites": "pnpm --filter dev-tools generate:sprites",
    "pipeline": "pnpm --filter dev-tools pipeline",
    "quality-check": "pnpm --filter dev-tools quality-check",
    "verify": "pnpm --filter client lint && pnpm --filter client type-check && pnpm --filter client test -- --run"
  },
  "build": {
    "appId": "com.ottergames.riverrush",
    "productName": "Otter River Rush",
    "directories": {
      "output": "dist-electron",
      "buildResources": "public"
    },
    "files": [
      "dist/**/*",
      "wrappers/electron/**/*",
      "!wrappers/electron/*.ts"
    ],
    "extraMetadata": {
      "main": "wrappers/electron/main.js"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.games",
      "icon": "public/pwa-512x512.png"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "public/pwa-512x512.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Game",
      "icon": "public/pwa-512x512.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "@ai-sdk/anthropic": "^2.0.38",
    "@ai-sdk/openai": "^2.0.56",
    "@capacitor/android": "^7.4.4",
    "@capacitor/cli": "^7.4.4",
    "@capacitor/core": "^7.4.4",
    "@capacitor/ios": "^7.4.4",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/postcss": "^4.1.16",
    "@types/howler": "^2.2.12",
    "@types/node": "^24.9.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/three": "^0.180.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitest/coverage-v8": "^4.0.4",
    "@vitest/ui": "^4.0.4",
    "ai": "^5.0.81",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "daisyui": "^5.3.10",
    "electron": "^38.4.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jsdom": "^27.0.1",
    "lint-staged": "^16.2.6",
    "openai": "^6.7.0",
    "playwright": "^1.56.1",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "rollup-plugin-visualizer": "^6.0.5",
    "sharp": "^0.34.4",
    "tailwindcss": "^4.1.16",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "undici": "^7.16.0",
    "vite": "^7.1.12",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-pwa": "^1.1.0",
    "vitest": "^4.0.4",
    "wait-on": "^9.0.1",
    "workbox-window": "^7.3.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{css,html,json,md}": [
      "prettier --write"
    ]
  }
}
