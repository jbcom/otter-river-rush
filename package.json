{
  "name": "otter-river-rush",
  "version": "1.0.0",
  "type": "module",
  "description": "Otter River Rush - An endless runner game for GitHub Pages",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:visual": "playwright test tests/e2e/visual.spec.ts",
    "test:visual:update": "playwright test tests/e2e/visual.spec.ts --update-snapshots",
    "test:visual:ui": "playwright test tests/e2e/visual.spec.ts --ui",
    "lint": "eslint . --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,html}\"",
    "type-check": "tsc --noEmit",
    "verify": "npm run lint && npm run type-check && npm test -- --run && npm run build",
    "generate-sprites": "tsx scripts/generate-sprites.ts",
    "generate-sprites:list": "tsx scripts/generate-sprites.ts --list",
    "generate-content": "tsx scripts/generate-content.ts",
    "generate-hud": "tsx scripts/generate-hud-sprites.ts",
    "generate-pwa-icons": "tsx scripts/generate-pwa-icons.ts",
    "process-icons": "tsx scripts/process-icons.ts",
    "create-placeholder-icons": "tsx scripts/create-placeholder-icons.ts",
    "generate-all": "npm run generate-sprites && npm run generate-hud && npm run generate-pwa-icons && npm run process-icons",
    "analyze": "vite-bundle-visualizer",
    "prepare": "[ -d .git ] && npx husky install || echo 'Not a git repo, skipping husky install'"
  },
  "dependencies": {
    "howler": "^2.2.4",
    "yuka": "^0.7.8"
  },
  "devDependencies": {
    "@ai-sdk/openai": "^2.0.53",
    "@anthropic-ai/sdk": "^0.67.0",
    "@playwright/test": "^1.47.0",
    "@types/howler": "^2.2.11",
    "@types/node": "^24.9.1",
    "@types/sharp": "^0.32.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^4.0.0",
    "@vitest/ui": "^4.0.0",
    "ai": "^5.0.78",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.0",
    "jsdom": "^27.0.1",
    "lint-staged": "^15.2.0",
    "openai": "^6.7.0",
    "playwright": "^1.47.0",
    "prettier": "^3.3.0",
    "rollup-plugin-visualizer": "^5.12.0",
    "sharp": "^0.34.4",
    "tsx": "^4.20.6",
    "typescript": "^5.5.0",
    "undici": "^7.16.0",
    "vite": "^5.4.0",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-pwa": "^0.21.0",
    "vitest": "^4.0.0",
    "workbox-window": "^7.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{css,html,json,md}": [
      "prettier --write"
    ]
  }
}
