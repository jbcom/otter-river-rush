{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "schedule": ["before 6am on Monday"],
  "timezone": "UTC",
  "packageRules": [
    {
      "description": "Group all non-major dependencies together",
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch",
      "automergeType": "pr"
    },
    {
      "description": "Group major updates separately",
      "matchUpdateTypes": ["major"],
      "groupName": "major dependencies",
      "groupSlug": "major",
      "automerge": false
    },
    {
      "description": "Automerge TypeScript/Vite patch updates",
      "matchPackagePatterns": ["^typescript$", "^vite$", "^@vitejs/"],
      "matchUpdateTypes": ["patch"],
      "automerge": true
    },
    {
      "description": "Automerge ESLint/Prettier updates (non-major)",
      "matchPackagePatterns": ["^eslint", "^prettier", "^@typescript-eslint/"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "description": "Automerge testing framework patches",
      "matchPackagePatterns": ["^vitest$", "^@vitest/", "^playwright$", "^@playwright/"],
      "matchUpdateTypes": ["patch"],
      "automerge": true
    },
    {
      "description": "Group GitHub Actions updates",
      "matchManagers": ["github-actions"],
      "groupName": "GitHub Actions",
      "automerge": false
    }
  ],
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "ðŸ¤– Dependency Updates Dashboard",
  "prConcurrentLimit": 3,
  "prHourlyLimit": 2,
  "semanticCommits": "enabled",
  "commitMessagePrefix": "chore(deps):",
  "labels": ["dependencies"],
  "assignees": [],
  "reviewers": []
}
